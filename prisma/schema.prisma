generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  name  String?
  posts Post[] // Add this line
}

model Post {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  title   String
  content String
  userId  String @db.ObjectId
  user    User   @relation(fields: [userId], references: [id])
}